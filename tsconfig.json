{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "types": ["react", "react-native"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
